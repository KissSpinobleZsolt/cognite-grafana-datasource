{
  "type": "datasource",
  "name": "Cognite Data Platform",
  "id": "cognite-dataplatform-datasource",

  "info": {
    "description": "Cognite Data Platform",
    "author": {
      "name": "Cognite AS",
      "url": "https://cognite.com"
    },
    "keywords": ["cognite", "timeseries", "iot"],
    "logos": {
      "small": "img/your_logo.png",
      "large": "img/your_logo.png"
    },
    "links": [
      {"name": "Project site", "url": "https://github.com/cognite/cognite-dataplatform-datasource"},
      {"name": "Apache License", "url": "https://github.com/cognite/cognite-dataplatform-datasource/blob/master/LICENSE"}
    ],
    "version": "%VERSION%",
    "updated": "%TODAY%"
  },

  "dependencies": {
    "grafanaVersion": "4.5.x",
    "plugins": [ ]
  },

  "routes": [
    {
      "path": "cogniteapi",
      "url": "https://api.cognitedata.com/api/0.5/projects",
      "headers": [
        {"name": "api-key", "content": "{{.SecureJsonData.cogniteDataPlatformApiKey}}"}
      ]
    },
    {
      "path": "cogniteloginstatus",
      "method": "GET",
      "url": "https://api.cognitedata.com/login/status",
      "headers": [
        {"name": "api-key", "content": "{{.SecureJsonData.cogniteDataPlatformApiKey}}"}
      ]
    }
  ],

  "metrics": true,
  "annotations": false
}
